<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".MainDishes">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/main_dishes_background"
            >

            <ImageButton
                android:id="@+id/back"
                android:layout_width="97dp"
                android:layout_height="94dp"
                android:background="@null"
                app:srcCompat="@drawable/back"
                />

            <Button
                android:id="@+id/Manty"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="302dp"
                android:text="1400 тг"
                android:textAllCaps="false"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="24dp" />

            <Button
                android:id="@+id/Roast"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="272dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="1600 тг"
                android:textAllCaps="false"
                android:textSize="24dp" />

            <Button
                android:id="@+id/Pilaf"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="272dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="1300 тг"
                android:textAllCaps="false"
                android:textSize="24dp" />

            <Button
                android:id="@+id/Lagman"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="276dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="1200 тг"
                android:textAllCaps="false"
                android:textSize="24dp" />

            <Button
                android:id="@+id/Borsch"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="276dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="1050 тг"
                android:textAllCaps="false"
                android:textSize="24dp" />

            <Button
                android:id="@+id/Okroshka"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="276dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="1150 тг"
                android:textAllCaps="false"
                android:textSize="24dp" />

            <Button
                android:id="@+id/FishSoup"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="276dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="1350 тг"
                android:textAllCaps="false"
                android:textSize="24dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>