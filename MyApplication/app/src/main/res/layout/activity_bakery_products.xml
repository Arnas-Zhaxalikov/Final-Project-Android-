<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BakeryProducts">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bakery_products_background">

            <ImageButton
                android:id="@+id/back"
                android:layout_width="97dp"
                android:layout_height="94dp"
                android:background="@null"
                app:srcCompat="@drawable/back"
                />

            <Button
                android:id="@+id/SamsaMeat"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="302dp"
                android:text="200 тг"
                android:textAllCaps="false"
                android:gravity="center_vertical|center_horizontal"
                android:textSize="24dp" />

            <Button
                android:id="@+id/SamsaChicken"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="272dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="180 тг"
                android:textAllCaps="false"
                android:textSize="24dp" />

            <Button
                android:id="@+id/SamsaCheese"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="272dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="150 тг"
                android:textAllCaps="false"
                android:textSize="24dp" />

            <Button
                android:id="@+id/Khachapuri"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="276dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="1000 тг"
                android:textAllCaps="false"
                android:textSize="24dp" />

            <Button
                android:id="@+id/Tortilla"
                android:layout_width="360dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="26dp"
                android:layout_marginTop="276dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="100 тг"
                android:textAllCaps="false"
                android:textSize="24dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>